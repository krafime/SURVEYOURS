<html>

<head>
    <meta charset="utf-8" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro&family=Mulish&display=swap" rel="stylesheet" />
    <!-- CSS -->
    <link rel="stylesheet" href="/CSS/Respondent_answer.css" />

    <title>Surveyours</title>
</head>

<body>
    <!-- NAVBAR SECTION -->
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-text">
                <%= requestedUser %>
                    <img class="profile-image" src="/images/profile.png" alt="" />
            </span>
            <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar"
                aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header">
                    <img class="Surveyours4_image" src="/images/Surveyours_4.png" alt="Surveyours_4 img" />
                    <h2 class="offcanvas-title" id="offcanvasDarkNavbarLabel">
                        Surveyours
                    </h2>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/dashboard/<%=requestedUser%>">
                                <img class="Overview-img" src="/images/overview.png" alt="" />Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/create/<%=requestedUser%>">
                                <img class="Create-img" src="/images/create.png" alt="" />
                                Create
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">
                                <img class="Logout-img" src="/images/logout.png" alt="" />Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Survey Respondent -->
    <div class="container-fluid">
        <div class="card AnswerList-form">
            <div class="card-text">
                <form action="/answer/<%= requestedUser %>/<%= requestedCode%>/<%= requestedID%>" method="post">
                    <div class="row mb-2">
                        <label for="colFormLabel" class="col-sm-10 col-form-label">
                            <h1 class="header">Respondent</h1>
                        </label>
                        <label for="colFormLabel" class="col-sm-1 col-form-label">
                            <button name="delete" type="submit" value="<%= requestedID %>"
                                class="btn btn-secondary btn-delete" data-bs-container="body" id="delete-btn">
                                Delete
                            </button>
                        </label>
                    </div>
                    <div class="row mb-3">
                        <ol class="list-group list-group-numbered">
                            <% let i=0 %>
                                <% answers.answer.forEach(function(answer) { %>
                                    <li
                                        class="list-group-item d-flex justify-content-between align-items-start Answer-btn">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">
                                                <%= questions[i] %>
                                            </div>
                                            <%= answer%>
                                        </div>
                                    </li>
                                    <% i=i+1 %>
                                        <% }); %>
                        </ol>
                        <div class="feedback Answer-btn">
                            <div class="ms-1 me-auto">
                                <div class="fw-bold">Feedback</div>
                                <%= feedback.feedback %>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>document.getElementById("delete-btn").addEventListener("click", function () {
            swal.fire({
                title: 'Deleted!',
                text: 'Your file has been deleted.',
                icon: 'success',
                showConfirmButton: false,
            })
        });</script>
</body>

</html>