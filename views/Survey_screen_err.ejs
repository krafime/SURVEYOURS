<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous">
    </script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/CSS/Survey.css ">

    <title>Surveyours</title>
</head>

<body>
    <div class="container-fluid">
        <div class="card survey-form">
            <div class="card-text">
                <form class="" action="/survey/<%=requestedCode%>" method="post">
                    <div class="row mb-2">
                        <label for="colFormLabel" class="col-sm-15 col-form-label">
                            <h1> <%= title %></h1>
                        </label>
                    </div>
                    <div class="row mb-2">
                        <% question.forEach(i => { %>
                        <label for="colFormLabel" class="col-sm-15 col-form-label">
                            <%= i %>
                            <div class="col-sm-15">
                                <input type="text" class="form-control survey form-control-lg" name="postAnswer"
                                    placeholder="Answer" autocomplete="off">
                            </div>
                        </label>
                        <% }); %>
                    </div>
                        <div class="nameErr">
                            <p><%= error %></p>
                        </div>
                    <div class="row mb-2">
                        
                        <label for="colFormLabel" class="col-sm-15 col-form-label">
                            <h2>Feedback</h2>
                            <div class="col-sm-15">
                                <input type="text" class="form-control survey form-control-lg" name="feedback"
                                    placeholder="Feedback" autocomplete="off">
                            </div>
                        </label>
                    </div>
                    <div id="SignIn" class="form-text">
                        <div class="d-grid">
                            <button class="btn btn-lg btn-survey" href="/" type="submit"
                                role="button-lg" name="button">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>