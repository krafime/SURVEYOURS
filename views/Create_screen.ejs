<html>

<head>
    <meta charset="utf-8">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous">
        </script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro&family=Mulish&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/CSS/Create.css">

    <title>Surveyours</title>
</head>

<body>
    <!-- NAVBAR SECTION -->
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-text">
                <%= requestedUser %>
                    <img class="profile-image" src="/images/profile.png" alt="">
            </span>
            <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar"
                aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header">
                    <img class="Surveyours4_image" src="/images/Surveyours_4.png" alt="Surveyours_4 img">
                    <h2 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Surveyours</h2>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/dashboard/<%=requestedUser%>">
                                <img class="Overview-img" src="/images/overview.png" alt="">Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/create/<%=requestedUser%>">
                                <img class="Create-img" src="/images/create.png" alt=""> Create
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">
                                <img class="Logout-img" src="/images/logout.png" alt="">Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- SURVEY SECTION -->
    <div class="container-fluid">
        <div class="card create-form">
            <div class="card-text">
                <form class="" action="/create/<%=requestedUser%>" method="post" onsubmit="return checkForm()">
                    <div class="row mb-2">
                        <label for="colFormLabel" class="col-sm-15 col-form-label">
                            <h1>Create My Survey</h1>
                        </label>
                    </div>
                    <div class="row mb-2">
                        <label for="colFormLabel" class="col-sm-15 col-form-label">
                            <div class="col-sm-15">
                                <input type="text" class="form-control input-survey-name form-control-lg"
                                    placeholder="Survey Name" name="postTitle" autocomplete="off">
                            </div>
                        </label>
                    </div>
                    <div class="row mb-2">
                        <label for="colFormLabel" class="col-sm-15 col-form-label">
                            <div id="inputQuestion" class="col-sm-15">
                                <input type="text" class="form-control input-survey form-control-lg"
                                    placeholder="Input Question" name="postQuestion" autocomplete="off">
                            </div>
                        </label>
                    </div>
                    <div id="error" style="display:none; color: red;font-size: 1.3rem;">You must fill all the blank form!</div>
                    <div id="SignIn" class="form-text">
                        <a href="#" id="add_question">Add Another Question</a>
                        <div class="d-grid">
                            <button class="btn btn-lg btn-create" type="submit" href="/dashboard" name="button">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function checkForm() {
            var empty = false;
            var inputElements = document.getElementsByTagName("input");
            for (var i = 0; i < inputElements.length; i++) {
                if (inputElements[i].value === "") {
                    empty = true;
                }
            }
            if(empty) {
                document.getElementById("error").style.display = "block";
                return false;
            } else {
                return true;
            }
        }

        add_question.onclick = function () {
            var newQuestion = document.createElement("input");
            newQuestion.setAttribute("type", "text");
            newQuestion.setAttribute("class", "form-control input-survey form-control-lg ");
            newQuestion.setAttribute("placeholder", "Input Question");
            newQuestion.setAttribute("name", "postQuestion");
            newQuestion.setAttribute("autocomplete", "off");
            newQuestion.setAttribute("style", "margin-bottom: 10px");
            newQuestion.setAttribute("style", "margin-top: 10px");
            inputQuestion.appendChild(newQuestion);
        };
    </script>
</body>

</html>