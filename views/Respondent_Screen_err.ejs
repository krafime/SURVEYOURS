<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous">
        </script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="CSS/Respondent.css">
    <script src="/create_question.js" type="text/javascript"></script>
    <title>Surveyours</title>
</head>

<body>
    <img class="surveyour2_image" src="images/Surveyours_2.png" alt="surveyour2 img">
    <div class="container-fluid">
        <div class="card code-form">
            <div class="card-text">
                <form id="surveyForm">
                    <div class="row mb-3">
                        <label for="colFormLabel" class="col-sm-9 col-form-label">
                            <input type="text" class="form-control code-placeholder form-control-lg"
                                placeholder="Survey Code" autocomplete="off" id="surveyCode">
                        </label>
                        <div class="col-sm-2">
                            <a class="btn btn-lg btn-outline-secondary btn-code" type="submit" name="button">
                                <img class="enter-code_image" src="images/enter-code.png" alt="enter-code img">
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="nameErr">
        <p><%= error %></p>
    </div>
    <div id="signup-signin" class="form-text">Are you an observer?
        <a href="/register">Sign Up</a> or <a href="/login">Sign In
    </div>
    <script>
        document.querySelector('.btn-code').addEventListener('click', function () {
            const code = document.querySelector('#surveyCode').value;
            if (code === '') {
                alert('Please enter a survey code.');
                return;
            } else {
                document.querySelector('.btn-code').setAttribute('href', '/survey/' + code);
            }
        });
    </script>
</body>

</html>